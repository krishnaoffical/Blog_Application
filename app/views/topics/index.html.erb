
<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Publication year</th>
      <th>Published by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.description %></td>
        <td><%= topic.publication_year %></td>
        <td><%= topic.published_by %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= button_to'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <%= link_to 'New Topic', new_topic_path, class: 'button' %>  |
  <%= link_to 'All Posts', posts_path ,class: 'button' %>    |
  <%= link_to 'All tags', tags_path ,class: 'button' %>
  </div>



