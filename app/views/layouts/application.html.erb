<!DOCTYPE html>
<html>
  <head>
    <title>WorkingProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- application.html.erb or application.html.haml -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

      <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>


  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>
  <div class="container text-center mt-5">
    <% if user_signed_in? %>
      <p>Welcome, <%= current_user.email %>!</p>
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-primary profile-button' %>
        <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-danger profile-button' %>

  <% else %>
      <%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary' %>
      <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-success' %>
    <% end %>
  </div>
  </body>
</html>
