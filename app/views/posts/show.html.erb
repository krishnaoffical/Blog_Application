<div class="text-center">
<%= link_to 'Ratings',topic_post_ratings_path(@topic,@post) %>  |
<%= link_to 'Back', topic_posts_url(@topic) %>  |
  <%= link_to 'Comments', topic_post_comments_path(@topic,@post) %>
</div>
