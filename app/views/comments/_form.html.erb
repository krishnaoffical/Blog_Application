<head>
  <%= stylesheet_link_tag 'posts' %>
</head>
<% if @comment %>
  <%= form_with(model: [@topic, @post, @comment]) do |form| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
        <ul>
          <% @comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container">
      <div class="card p-3 blue" >">
        <div class="card-body">
          <p class="card-title">Add a Comment</p>
          <div class="form-group">
            <%= form.label :content, class: "comment-label" %>
            <%= form.text_area :content, class: "form-control comment-input" %>
          </div>

          <div class="form-group text-center">
            <%= form.submit "Submit", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: [@topic, @post, Comment.new]) do |form| %>
    <div class="container">
      <div class="card p-3 blue"style="width: 500px">
        <div class="card-body">
          <p class="card-title">Add a Comment:</p>
          <div class="form-group mb-3">
            <%= form.label :content, class: "comment-label" %>
            <%= form.text_area :content, class: "form-control comment-input" %>
          </div>

          <div class="form-group text-center">
            <%= form.submit "Add Comment", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
<%end %>
<%end %>